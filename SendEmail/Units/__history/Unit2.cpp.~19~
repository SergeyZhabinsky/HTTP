#include <vcl.h>
#pragma hdrstop

#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm2::FormShow(TObject *Sender)
{
	IdSMTP1->Host = "smtp.yandex.ru";
	IdSMTP1->Port = 465;
	IdSMTP1->AuthType = satDefault;
	IdSMTP1->Username = "szhab@list.ru";//{Должно совпадать с msg.From.Address}
	IdSMTP1->Password = "gobli0000";
}
//---------------------------------------------------------------------------
void __fastcall TForm2::BitBtn1Click(TObject *Sender)
{
	SSLOpen->Destination = IdSMTP1->Host+":"+IntToStr(IdSMTP1->Port);
	SSLOpen->Host = IdSMTP1->Host;
	SSLOpen->Port = IdSMTP1->Port;
	SSLOpen->DefaultPort = 0;
	SSLOpen->SSLOptions->Method = sslvSSLv23;
	SSLOpen->SSLOptions->Mode = sslmUnassigned;

	IdSMTP1->IOHandler = SSLOpen;
	IdSMTP1->UseTLS = utUseImplicitTLS;


	msg->ContentType="text/html; charset=windows-1251";
	msg->Body->Text="Привет из Delphi";
	msg->Subject = "Проверка почты";
	msg->From->Address = "szhab@list.ru";// {&lt;&lt;Должно совпадать с SMTP.UserName}
	msg->From->Name = "Сергунчик";
	msg->Recipients->EMailAddresses ="szhab@list.ru";

	IdSMTP1->Connect();
	IdSMTP1->Send(msg);
    IdSMTP1->Disconnect();
}
